            const EMOJIS = ['😀','😂','🤣','🥲','😍','🤯','😎','🤖','👾','👻','💀','👽','🚀','🛸','🌀','🧠','🌌','🔮','🔥','⚡','🌈','🎮','📺'];
            const MAX_POSTS = 50;

            // Estado de la aplicación
            let state = {
                posts: JSON.parse(localStorage.getItem(POSTS_KEY)) || [],
                currentBoard: 'meta',
                darkMode: localStorage.getItem('neurochan_theme') !== 'light',
                audioEnabled: false,
                isAdmin: localStorage.getItem('neurochan_admin') === 'true',
                replyTo: null,
                currentDeletePostId: null
            };

            // Avatar options
            const avatars = [
                '👾', '🤖', '👹', '👻', '💀', '👽', '🎮', '🕹️', '🔮', '🧿',
                '👁️', '🧠', '🦾', '🦿', '🧬', '🔭', '🛸', '🌌', '🌀', '🌠'
            ];

