                techno: {
                    title: "/tecnosoma/ - Conciencia Cibernética",
                    description: "Temas: Aumento Neural, Tecnología Cyberpunk, Interfaces Mente-Máquina",
                    footer: "La carne es débil. La máquina está dispuesta. La mente es eterna."
                },
                retro: {
                    title: "/retro-anime/ - Nostalgia Neon y Delirio Cyber",
                    description: "Temas: Anime Clásico, Retro-Futurismo, Estética Cyberpunk",
                    footer: "Fantasmas en la máquina. Recuerdos en la estática. Sueños en los datos."
                }
            };

            // Inicialización cuando el DOM está listo
            document.addEventListener('DOMContentLoaded', function() {
                setupEventListeners();
                renderPosts();
                setupEmojiPicker();

                // Agregar posts de ejemplo si no hay ninguno
                if (state.posts.length === 0) {
                    addSamplePosts();
                }

                // Cargar preferencia de tema
                updateTheme();

                // Configurar admin panel si es admin
                if (state.isAdmin) {
                    setupAdminPanel();
                }
            });

            // Configurar todos los event listeners
            function setupEventListeners() {
                // Botón de enviar post
                document.getElementById('submitPost').addEventListener('click', createPost);

                // Botón de limpiar posts
                document.getElementById('clearPage').addEventListener('click', clearPosts);

                // Botón de cambiar tema
                document.getElementById('themeToggle').addEventListener('click', toggleTheme);

                // Configurar audio toggle
                setupAudioToggle();

                // Configurar subida de archivos
                setupFileUpload();

                // Configurar selectores de tablero
                document.querySelectorAll('.board-selector').forEach(btn => {
                    btn.addEventListener('click', function() {
                        changeBoard(btn.dataset.board);
                    });
                });

                // Configurar modal de borrado
                document.getElementById('cancelDelete').addEventListener('click', closeDeleteModal);
                document.getElementById('confirmDelete').addEventListener('click', deletePostWithPassword);

                // Configurar admin panel
                document.getElementById('adminToggle').addEventListener('click', toggleAdminModal);
                document.getElementById('cancelAdmin').addEventListener('click', closeAdminModal);
                document.getElementById('confirmAdmin').addEventListener('click', verifyAdminPassword);
            }

            // Configurar el selector de emojis
            function setupEmojiPicker() {
                const emojiToggle = document.getElementById('emojiToggle');
                const emojiPicker = document.getElementById('emojiPicker');
                const textarea = document.getElementById('postContent');

                // Llenar el picker con emojis
                EMOJIS.forEach(emoji => {
                    const emojiBtn = document.createElement('button');
                    emojiBtn.className = 'emoji-option';
                    emojiBtn.textContent = emoji;
                    emojiBtn.addEventListener('click', function() {
                        insertAtCursor(textarea, emoji);
                        emojiPicker.classList.remove('active');
                    });
                    emojiPicker.appendChild(emojiBtn);
                });

                // Alternar visibilidad del picker
                emojiToggle.addEventListener('click', function(e) {
                    e.stopPropagation();
                    emojiPicker.classList.toggle('active');
                });

                // Cerrar picker al hacer clic fuera
                document.addEventListener('click', function(e) {
                    if (!emojiPicker.contains(e.target) && e.target !== emojiToggle) {
                        emojiPicker.classList.remove('active');
                    }
                });
            }

            // Insertar texto en la posición del cursor
            function insertAtCursor(textarea, text) {
                const startPos = textarea.selectionStart;
                const endPos = textarea.selectionEnd;
                const currentText = textarea.value;
                
                textarea.value = currentText.substring(0, startPos) + text + currentText.substring(endPos);
                textarea.selectionStart = textarea.selectionEnd = startPos + text.length;
                textarea.focus();
            }

            // Crear un nuevo post
            function createPost() {
                const content = document.getElementById('postContent').value.trim();
                const name = document.getElementById('postName').value.trim() || "Anónimo";
                const password = document.getElementById('postPassword').value.trim();
                const ephemeral = document.getElementById('ephemeralMode').checked;
                const fileInput = document.getElementById('fileUpload');

                if (!content && !fileInput.files[0]) return;

                const now = new Date();
                const post = {
                    id: Date.now(),
                    content: content,
                    name: name,
                    timestamp: now.toISOString(),
                    avatar: avatars[Math.floor(Math.random() * avatars.length)],
                    color: postColors[Math.floor(Math.random() * postColors.length)],
                    board: state.currentBoard,
                    expiresAt: Date.now() + POST_EXPIRATION,
                    resonateCount: 0,
                    replyTo: state.replyTo,
                    passwordHash: password ? bcrypt.hashSync(password, 10) : null,
                    ephemeral: ephemeral
                };

                // Resetear replyTo después de usarlo
                state.replyTo = null;
                document.getElementById('postContent').placeholder = "Transmite tus pensamientos... (soporta texto, imágenes por URL)";

                // Manejar subida de imagen si está presente
                if (fileInput.files[0]) {
                    const file = fileInput.files[0];

                    // Verificar tamaño de imagen
                    if (file.size > MAX_IMAGE_SIZE) {
                        alert("Imagen demasiado grande. Máximo 2MB permitidos.");
                        return;
                    }

                    const reader = new FileReader();
                    reader.onload = function(e) {
                        // Comprimir imagen si es necesario
                        compressImage(e.target.result, function(compressedImage) {
                            post.content = compressedImage;
                            post.isImage = true;
                            completePostCreation(post);
                        });
                    };
                    reader.readAsDataURL(file);
                } else {
                    completePostCreation(post);
                }
            }

            // Comprimir imagen usando canvas
            function compressImage(imageData, callback) {
                const img = new Image();
                img.onload = function() {
                    const canvas = document.createElement('canvas');
                    const ctx = canvas.getContext('2d');

                    // Calcular nuevas dimensiones manteniendo relación de aspecto
                    const maxWidth = 800;
                    const maxHeight = 800;
                    let width = img.width;
                    let height = img.height;

                    if (width > height) {
                        if (width > maxWidth) {
                            height *= maxWidth / width;
                            width = maxWidth;
                        }
                    } else {
                        if (height > maxHeight) {
                            width *= maxHeight / height;
                            height = maxHeight;
                        }
                    }

                    canvas.width = width;
                    canvas.height = height;
                    ctx.drawImage(img, 0, 0, width, height);

                    // Convertir a JPEG con calidad 80%
                    const compressedData = canvas.toDataURL('image/jpeg', 0.8);
                    callback(compressedData);
                };
                img.src = imageData;
            }

            function completePostCreation(post) {
                // Sanitizar contenido HTML antes de guardar
                post.content = DOMPurify.sanitize(post.content);

                // Solo guardar en localStorage si no es efímero
                if (!post.ephemeral) {
                    state.posts.unshift(post);
                    
                    // Limitar número máximo de posts
                    if (state.posts.length > MAX_POSTS) {
                        state.posts = state.posts.slice(0, MAX_POSTS);
                    }
                    
                    savePosts();
                }

                renderPosts();

                // Limpiar inputs
                document.getElementById('postContent').value = '';
                document.getElementById('postName').value = '';
                document.getElementById('postPassword').value = '';
                document.getElementById('fileUpload').value = '';
                document.getElementById('fileName').textContent = '';
                document.getElementById('ephemeralMode').checked = false;
                document.getElementById('typingPreview').classList.add('hidden');

                // Efecto visual de confirmación
                const button = document.getElementById('submitPost');
                button.classList.add('bg-pink-500', 'text-white');
                setTimeout(function() {
                    button.classList.remove('bg-pink-500', 'text-white');
                }, 300);

                // Configurar timeout para expiración del post
                setTimeout(function() {
                    fadeOutPost(post.id);
                }, POST_EXPIRATION);
            }

            // Renderizar todos los posts para el tablero actual
            function renderPosts() {
                const container = document.getElementById('postsContainer');
                container.innerHTML = '';

                const boardPosts = state.posts.filter(post => post.board === state.currentBoard);

                boardPosts.forEach(post => {
                    const postElement = createPostElement(post);
                    container.appendChild(postElement);

                    // Aplicar efecto de transmisión al nuevo post
                    if (post.id === state.posts[0]?.id) {
                        postElement.classList.add('transmission-effect');
                        setTimeout(function() {
                            postElement.classList.remove('transmission-effect');
                        }, 2000);
                    }

                    // Aplicar efectos basados en palabras clave
                    applyPostEffects(post, postElement);
                });
            }

            // Aplicar efectos visuales basados en contenido del post
            function applyPostEffects(post, element) {
                const content = post.content.toLowerCase();

                if (content.includes('sueño') || content.includes('dream')) {
                    element.classList.add('dream-glow');
                }
                if (content.includes('tecno') || content.includes('tech') || content.includes('ciber')) {
                    element.classList.add('tech-glow');
                }
                if (content.includes('dimensión') || content.includes('realidad')) {
                    element.classList.add('dimension-glow');
                }
            }

            // Crear elemento HTML para un post
            function createPostElement(post) {
                const postElement = document.createElement('div');
                postElement.className = `post ${post.color} p-4 rounded-lg bg-opacity-20 backdrop-blur-sm neon-border hover:bg-opacity-30 transition-all duration-300`;
                postElement.dataset.id = post.id;

                const date = new Date(post.timestamp);
                const timeString = date.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });

                // Determinar el contenido del post (imagen, video, texto, etc.)
                const contentHtml = getPostContentHtml(post);

                // Estructura de respuesta si es un reply
                const replyIndicator = post.replyTo ? 
                    `<div class="reply-indicator mb-2">
                        <span class="text-xs text-gray-400">Respondiendo a </span>
                        <span class="reply-link text-xs" data-post-id="${post.replyTo}">>>${post.replyTo.toString().slice(-4)}</span>
                    </div>` : '';

                postElement.innerHTML = `
                    <div class="flex items-start mb-2">
                        <span class="avatar text-3xl mr-3">${post.avatar}</span>
                        <div>
                            <span class="text-xs text-gray-400">${post.name}</span>
                            <span class="text-xs text-gray-400 ml-2">${timeString}</span>
                        </div>
                    </div>
                    ${replyIndicator}
                    <div class="post-content text-sm mb-2">${contentHtml}</div>
                    <div class="flex justify-between items-center">
                        <div class="flex gap-2">
                            <button class="resonate-button text-xs px-2 py-1 border border-purple-500 text-purple-400" aria-label="Resonar con este post">
                                💡 Resonar (${post.resonateCount})
                            </button>
                            <button class="reply-button text-xs px-2 py-1 border border-cyan-500 text-cyan-400" aria-label="Responder a este post">
                                ↩ Responder
                            </button>
                        </div>
                        <div class="flex items-center">
                            ${state.isAdmin || post.passwordHash ? '<button class="delete-button text-xs px-1" aria-label="Eliminar post">🗑️</button>' : ''}
                            <span class="text-xs text-gray-500 ml-2">ID: ${post.id.toString().slice(-4)}</span>
                        </div>
                    </div>
                `;

                // Añadir evento al botón de resonar
                const resonateBtn = postElement.querySelector('.resonate-button');
                resonateBtn.addEventListener('click', function() {
                    resonatePost(post.id);
                });

                // Añadir evento al botón de responder
                const replyBtn = postElement.querySelector('.reply-button');
                replyBtn.addEventListener('click', function() {
                    replyToPost(post.id);
                });

                // Añadir evento al botón de borrar (si está visible)
                const deleteBtn = postElement.querySelector('.delete-button');
                if (deleteBtn) {
                    deleteBtn.addEventListener('click', function() {
                        if (state.isAdmin) {
                            deletePost(post.id);
                        } else {
                            openDeleteModal(post.id);
                        }
                    });
                }

                // Añadir eventos a los links de reply
                const replyLinks = postElement.querySelectorAll('.reply-link');
                replyLinks.forEach(link => {
                    link.addEventListener('mouseenter', function() {
                        showReplyPreview(link.dataset.postId, link);
                    });
                });

                return postElement;
            }

            // Mostrar preview de un post al hacer hover en un reply link
            function showReplyPreview(postId, element) {
                const post = state.posts.find(p => p.id === parseInt(postId));
                if (!post) return;

                // Crear tooltip si no existe
                let tooltip = element.querySelector('.tooltip-text');
                if (!tooltip) {
                    tooltip = document.createElement('div');
                    tooltip.className = 'tooltip-text text-xs p-2';
                    
                    // Limitar contenido del preview
                    let previewContent = post.content;
                    if (previewContent.length > 100) {
                        previewContent = previewContent.substring(0, 100) + '...';
                    }
                    
                    tooltip.innerHTML = `
                        <div class="flex items-center mb-1">
                            <span class="text-xs mr-2">${post.avatar}</span>
                            <span class="text-xs">${post.name}</span>
                        </div>
                        <div class="text-xs">${previewContent}</div>
                    `;
                    element.appendChild(tooltip);
                }
            }

            // Responder a un post
            function replyToPost(postId) {
                state.replyTo = postId;
                document.getElementById('postContent').placeholder = `>>${postId.toString().slice(-4)} `;
                document.getElementById('postContent').focus();
            }

            // Obtener HTML del contenido del post según su tipo
            function getPostContentHtml(post) {
                if (post.isImage || isImageUrl(post.content)) {
                    return `<img src="${post.content}" alt="Imagen del post" class="w-full h-auto max-h-64 object-contain rounded mb-2 neon-border" onerror="this.parentNode.innerHTML='<p class=\'text-red-400\'>Error al cargar imagen</p>'">`;
                }

                if (isUrl(post.content)) {
                    if (isYoutubeUrl(post.content)) {
                        const videoId = extractYoutubeId(post.content);
                        return `
                            <div class="mb-2">
                                <iframe class="w-full h-48" src="https://www.youtube.com/embed/${videoId}" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                            </div>
                        `;
                    } else if (isSoundcloudUrl(post.content)) {
                        return `
                            <div class="mb-2">
                                <iframe class="w-full h-48" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?url=${encodeURIComponent(post.content)}"></iframe>
                            </div>
                        `;
                    } else {
                        return `<a href="${post.content}" target="_blank" class="text-cyan-400 hover:text-pink-400 underline">${post.content}</a>`;
                    }
                }

                // Formatear texto con saltos de línea y detectar replies
                let formattedContent = post.content;
                
                // Detectar patrones >>ID y convertirlos en links
                formattedContent = formattedContent.replace(/>>(\d{4,})/g, (match, id) => {
                    return `<a href="#" class="reply-link text-cyan-400" data-post-id="${id}">${match}</a>`;
                });

                // Reemplazar saltos de línea
                formattedContent = formattedContent.replace(/\n/g, '<br>');

                return formattedContent;
            }

            // Limpiar todos los posts del tablero actual
            function clearPosts() {
                if (confirm("Esto borrará todas las transmisiones. ¿Continuar?")) {
                    state.posts = state.posts.filter(post => post.board !== state.currentBoard);
                    savePosts();

                    // Efecto visual de confirmación
                    const button = document.getElementById('clearPage');
                    button.classList.add('bg-red-500', 'text-white');
                    setTimeout(function() {
                        button.classList.remove('bg-red-500', 'text-white');
                    }, 300);

                    // Aplicar efecto de desvanecimiento a todos los posts antes de eliminarlos
                    const postsElements = document.querySelectorAll('.post');
                    postsElements.forEach(post => {
                        post.style.animation = 'glitch-effect 1s forwards';
                        setTimeout(function() {
                            post.style.opacity = '0';
                            post.style.transform = 'scale(0.9)';
                        }, 500);
                    });

                    setTimeout(renderPosts, 1000);
                }
            }

            // Guardar posts en localStorage
            function savePosts() {
                localStorage.setItem(POSTS_KEY, JSON.stringify(state.posts));
            }

            // Funciones de utilidad para verificar URLs
            const isUrl = (str) => {
                try {
                    new URL(str);
                    return true;
                } catch (_) {
                    return false;
                }
            };

            const isImageUrl = (url) => {
                if (!isUrl(url)) return false;
                return /\.(jpg|jpeg|png|webp|avif|gif|svg)$/i.test(url);
            };

            const isYoutubeUrl = (url) => {
                if (!isUrl(url)) return false;
                return url.includes('youtube.com') || url.includes('youtu.be');
            };

            const extractYoutubeId = (url) => {
                const regExp = /^.*(youtu\.be\/|v\/|u\/\w\/|embed\/|watch\?v=|&v=)([^#&?]*).*/;
                const match = url.match(regExp);
                return (match && match[2].length === 11) ? match[2] : null;
            };

            const isSoundcloudUrl = (url) => {
                if (!isUrl(url)) return false;
                return url.includes('soundcloud.com');
            };

            // Vista previa del texto mientras se escribe
            function updateTypingEffect(text) {
                const preview = document.getElementById('typingPreview');
                const typingText = document.getElementById('typingText');

                if (text.trim()) {
                    preview.classList.remove('hidden');
                    typingText.textContent = text;
                } else {
                    preview.classList.add('hidden');
                }
            }

            // Configurar toggle de audio
            function setupAudioToggle() {
                const audio = document.getElementById('bgAudio');
                const toggle = document.getElementById('audioToggle');

                toggle.addEventListener('click', function() {
                    state.audioEnabled = !state.audioEnabled;

                    if (state.audioEnabled) {
                        audio.play();
                        toggle.innerHTML = `
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-pink-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.586 15H4a1 1 0 01-1-1v-4a1 1 0 011-1h1.586l4.707-4.707C10.923 3.663 12 4.109 12 5v14c0 .891-1.077 1.337-1.707.707L5.586 15z" clip-rule="evenodd" />
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 14a2 2 0 100-4 2 2 0 000 4z" />
                            </svg>
                        `;
                        toggle.classList.add('border-pink-500');
                        toggle.classList.remove('border-cyan-500');
                    } else {
                        audio.pause();
                        toggle.innerHTML = `
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-cyan-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.536 8.464a5 5 0 010 7.072M12 6a7.975 7.975 0 0115.657 2.343m0 0a7.975 7.975 0 010 11.314m-11.314 0a7.975 7.975 0 010-11.314m0 0a7.975 7.975 0 0115.657-2.343" />
                            </svg>
                        `;
                        toggle.classList.add('border-cyan-500');
                        toggle.classList.remove('border-pink-500');
                    }
                });
            }

            // Configurar subida de archivos
            function setupFileUpload() {
                const fileInput = document.getElementById('fileUpload');
                const fileName = document.getElementById('fileName');

                fileInput.addEventListener('change', function() {
                    if (fileInput.files[0]) {
                        fileName.textContent = fileInput.files[0].name;
                    } else {
                        fileName.textContent = '';
                    }
                });
            }

