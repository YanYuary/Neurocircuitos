            const postColors = [
                'bg-gradient-to-br from-cyan-900 to-blue-900',
                'bg-gradient-to-br from-purple-900 to-pink-900',
                'bg-gradient-to-br from-blue-900 to-indigo-900',
                'bg-gradient-to-br from-pink-900 to-red-900',
                'bg-gradient-to-br from-green-900 to-teal-900',
                'bg-gradient-to-br from-yellow-900 to-orange-900'
            ];

            // Board information (traducido al español)
            const boards = {
                meta: {
                    title: "/meta/ - Metaprogramación y Viaje Dimensional",
                    description: "Temas: Neurocircuitos, Egocuerpos, Realidades Paralelas, Estética Retro Anime",
