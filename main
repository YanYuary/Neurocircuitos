            // Cambiar de tablero
            function changeBoard(board) {
                state.currentBoard = board;

                // Actualizar botón activo
                document.querySelectorAll('.board-selector').forEach(btn => {
                    btn.classList.remove('active');
                    if (btn.dataset.board === board) {
                        btn.classList.add('active');
                    }
                });

                // Actualizar información del tablero
                const boardInfo = document.getElementById('boardInfo');
                boardInfo.innerHTML = `
                    <h2 class="text-2xl mb-2 neon-text">${boards[board].title}</h2>
                    <p class="mb-2">${boards[board].description}</p>
                    <p>${boards[board].footer}</p>
                `;

                // Actualizar título del tablero
                document.getElementById('boardTitle').textContent = board === 'meta' ? 
                    "/meta/ Tableros de la Mente" : 
                    `/${board}/ ${board.charAt(0).toUpperCase() + board.slice(1).replace('-', ' ')}`;

                // Renderizar posts para este tablero
                renderPosts();
            }

            // Efecto de resonar en un post
            function resonatePost(postId) {
                const post = state.posts.find(p => p.id === postId);
                if (!post) return;

                post.resonateCount++;
                savePosts();

                // Actualizar visualmente el botón
                const button = document.querySelector(`[data-id="${postId}"] .resonate-button`);
                if (button) {
                    button.textContent = `💡 Resonar (${post.resonateCount})`;
                    button.classList.add('active', 'pulse');
                    
                    setTimeout(function() {
                        button.classList.remove('active');
                    }, 1000);
                    
                    setTimeout(function() {
                        button.classList.remove('pulse');
                    }, 500);
                }
            }

            // Desvanecer y eliminar un post expirado
            function fadeOutPost(postId) {
                const post = state.posts.find(p => p.id === postId);
                if (!post) return;

                const postElement = document.querySelector(`[data-id="${postId}"]`);
                if (postElement) {
                    postElement.classList.add('post-fadeout');
                    setTimeout(function() {
                        state.posts = state.posts.filter(p => p.id !== postId);
                        savePosts();
                        renderPosts();
                    }, 1000);
                }
            }

            // Alternar entre temas claro/oscuro
            function toggleTheme() {
                state.darkMode = !state.darkMode;
                updateTheme();
                saveThemePreference();
            }

            // Guardar preferencia de tema
            function saveThemePreference() {
                localStorage.setItem('neurochan_theme', state.darkMode ? 'dark' : 'light');
            }

            // Actualizar tema basado en el estado
            function updateTheme() {
                const themeToggle = document.getElementById('themeToggle');
                const themeColorMeta = document.getElementById('themeColorMeta');

                if (state.darkMode) {
                    document.documentElement.classList.remove('light');
                    themeToggle.textContent = '🌓 CAMBIAR TEMA';
                    themeToggle.classList.remove('bg-white', 'text-black');
                    themeToggle.classList.add('bg-black', 'text-pink-400');
                    themeColorMeta.content = '#0d0221';
                } else {
                    document.documentElement.classList.add('light');
                    themeToggle.textContent = '🌘 CAMBIAR TEMA';
                    themeToggle.classList.remove('bg-black', 'text-pink-400');
                    themeToggle.classList.add('bg-white', 'text-black');
                    themeColorMeta.content = '#f0f4f8';
                }
            }

            // Borrar un post
            function deletePost(postId) {
                state.posts = state.posts.filter(p => p.id !== postId);
                savePosts();
                renderPosts();
            }

            // Abrir modal de borrado
            function openDeleteModal(postId) {
                state.currentDeletePostId = postId;
                document.getElementById('deleteModal').style.display = 'flex';
                document.getElementById('deletePassword').focus();
            }

            // Cerrar modal de borrado
            function closeDeleteModal() {
                state.currentDeletePostId = null;
                document.getElementById('deleteModal').style.display = 'none';
                document.getElementById('deletePassword').value = '';
            }

            // Verificar contraseña y borrar post
            function deletePostWithPassword() {
                const password = document.getElementById('deletePassword').value;
                const post = state.posts.find(p => p.id === state.currentDeletePostId);
                
                if (!post) {
                    closeDeleteModal();
                    return;
                }

                if (post.passwordHash && bcrypt.compareSync(password, post.passwordHash)) {
                    deletePost(post.id);
                    closeDeleteModal();
                } else {
                    alert("Contraseña incorrecta");
                }
            }

            // Configurar panel de administrador
            function setupAdminPanel() {
                document.getElementById('adminToggle').classList.add('bg-green-500');
            }

            // Alternar modal de admin
            function toggleAdminModal() {
                if (state.isAdmin) {
                    // Mostrar panel de admin si ya está logueado
                    alert("Ya estás logueado como administrador");
                } else {
                    document.getElementById('adminModal').style.display = 'flex';
                    document.getElementById('adminPassword').focus();
                }
            }

            // Cerrar modal de admin
            function closeAdminModal() {
                document.getElementById('adminModal').style.display = 'none';
                document.getElementById('adminPassword').value = '';
            }

            // Verificar contraseña de admin
            function verifyAdminPassword() {
                const password = document.getElementById('adminPassword').value;
                
                if (bcrypt.compareSync(password, ADMIN_HASH)) {
                    state.isAdmin = true;
                    localStorage.setItem('neurochan_admin', 'true');
                    closeAdminModal();
                    setupAdminPanel();
                    renderPosts(); // Para mostrar botones de borrado
                } else {
                    alert("Contraseña incorrecta");
                }
            }
        })();
    </script>
</body>
</html>
